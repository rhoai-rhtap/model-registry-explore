{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["dockerfile"],
  "tekton": {
    "enabled": true,
    "baseBranches": ["main", "test-1"],
    "packageRules": [
      {
        "matchDatasources": ["docker"],
        "matchDepNames": ["registry.redhat.io/ubi8/go-toolset"],
        "matchUpdateTypes": ["digest"],
        "matchFileNames": ["*Dockerfile.konflux*"],
        "enabled": true,
        "branchPrefix": "update/go-toolset-digest/",
        "groupName": "Go Toolset Digest Updates",
        "prBodyTemplate": "Updates the digest for {{depName}} to the latest available digest ({{newDigest}})."
      }
    ]
  }
}
